<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.10" />
  <menu id="action-menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">About</attribute>
        <attribute name="action">app.about</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">Quit</attribute>
        <attribute name="action">app.quit</attribute>
      </item>
    </section>
  </menu>
  <template class="PiktureMainWindow" parent="AdwApplicationWindow">
    <property name="title" translatable="yes">Pikture</property>
    <child>
      <object class="GtkBox" id="layout_box">
        <property name="orientation">vertical</property>
        <child>
          <object class="AdwHeaderBar" id="header">
            <child type="end">
              <object class="GtkMenuButton">
                <property name="menu-model">action-menu</property>
                <property name="icon-name">open-menu-symbolic</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkButton" id="delete_image_button">
                <signal name="clicked" handler="delete_button_clicked" />
                <property name="visible">false</property>
                <property name="icon-name">user-trash-symbolic</property>
                <style>
                  <class name="destructive-action" />
                </style>
              </object>
            </child>
            <child type="start">
              <object class="GtkToggleButton">
                <signal name="clicked" handler="on_flap_button_toggled" />
                <property name="icon-name">sidebar-show-right-symbolic</property>
              </object>
            </child>
            <child type="start">
              <object class="GtkButton">
                <signal name="clicked" handler="open_button_clicked" />
                <property name="icon-name">document-open-symbolic</property>
              </object>
            </child>
            <child type="start">
              <object class="GtkButton" id="rotate_counterclockwise_button">
                <signal name="clicked" handler="on_counter_clockwise_clicked" />
                <property name="has-frame">false</property>
                <property name="visible">false</property>
                <property name="icon-name">object-rotate-left-symbolic</property>
              </object>
            </child>
            <child type="start">
              <object class="GtkButton" id="rotate_clockwise_button">
                <signal name="clicked" handler="on_clockwise_clicked" />
                <property name="has-frame">false</property>
                <property name="visible">false</property>
                <property name="icon-name">object-rotate-right-symbolic</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwFlap" id="adw_flap">
            <property name="flap">
              <object class="PiktureSidebar" id="sidebar" />
            </property>
            <property name="content">
              <object class="PiktureViewer" id="viewer" />
            </property>
            <property name="separator">
              <object class="GtkSeparator" />
            </property>
            <property name="locked">true</property>
            <property name="reveal-flap">false</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
